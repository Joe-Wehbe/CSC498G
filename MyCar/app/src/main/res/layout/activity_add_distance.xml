<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".AddDistanceActivity">
<!--    android:orientation="vertical"-->
<!--    android:padding="12dp"-->
<!--    android:gravity="center_horizontal"-->


    <Button
        android:id="@+id/button9"
        android:layout_width="239dp"
        android:layout_height="48dp"
        android:layout_marginTop="116dp"
        android:backgroundTint="@color/dark_gray"
        android:onClick="goToCarInfo"
        android:text="Add  car"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/to_box" />

    <ImageView
        android:id="@+id/to_box"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:contentDescription="to_box"
        android:src="@drawable/box1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/from_box" />


    <EditText
        android:id="@+id/et_destination"
        android:layout_width="238dp"
        android:layout_height="52dp"
        android:background="@null"
        android:hint="To"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/to_box"
        app:layout_constraintEnd_toEndOf="@+id/to_box"
        app:layout_constraintHorizontal_bias="0.88"
        app:layout_constraintStart_toStartOf="@+id/to_box"
        app:layout_constraintTop_toTopOf="@+id/to_box"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/to_vector"
        android:layout_width="23dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:contentDescription="to_vector"
        android:src="@drawable/to_vector"
        app:layout_constraintStart_toStartOf="@+id/to_box"
        app:layout_constraintTop_toBottomOf="@+id/from_vector" />

    <ImageView
        android:id="@+id/from_box"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:layout_marginTop="92dp"
        android:contentDescription="from_box"
        android:src="@drawable/box1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_source"
        android:layout_width="229dp"
        android:layout_height="54dp"
        android:background="@null"
        android:hint="From"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/from_box"
        app:layout_constraintEnd_toEndOf="@+id/from_box"
        app:layout_constraintHorizontal_bias="0.725"
        app:layout_constraintStart_toStartOf="@+id/from_box"
        app:layout_constraintTop_toTopOf="@+id/from_box"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/from_vector"
        android:layout_width="21dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="108dp"
        android:contentDescription="from_vector"
        android:src="@drawable/from_vector"
        app:layout_constraintStart_toStartOf="@+id/from_box"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/gradient"
        android:layout_width="wrap_content"
        android:layout_height="129dp"
        android:layout_marginBottom="4dp"
        android:contentDescription="gradient"
        android:src="@drawable/gradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>